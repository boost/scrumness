.row
  .medium-6.columns
    %h1
      = @project.name
    = @project.description


  .medium-6.columns
    %h2 Manage

    %ul.button-group.round
      %li
        = link_to 'Edit', edit_project_path(@project.id), class: 'button round tiny'
      %li
        = link_to 'Delete', edit_project_path(@project.id), data: {confirm: "This will permenantly delete project #{@project.name}. Are you sure?"}, class: 'button alert round tiny'      

    = link_to 'Create Sprint/Review', new_project_sprint_path(project_id: @project.id), class: 'button round tiny'

.row
  = line_chart generate_project_graph(@project), {discrete: true, library: {hAxis: {title: "Sprints"}, vAxis: {title: "Rating"}}}
  
  #chart_div{:style => "width:100%;height:300px;"}




