.row
  .small-12.columns
    %h1
      = @project.name

    %button.filter-btn.button.menu{value: 0} Filters
    %br
    .filter-container.menu.clearfix{style: "display:none; height:200px"} 
      .row
        .medium-12.columns{style: "align:center;"}
          %h5{style: "float:left;"} From
          %h5{style: "float:right;"} To
      .row    
        .medium-12.columns
          .range-slider{"data-options" => "display_selector: #sliderOutput3;", "data-slider" => ""}
            %span.range-slider-handle{:role => "slider", :tabindex => "0"}
            %span.range-slider-active-segment

.row
  .small-12.medium-centered.columns{style: "text-align: center;"}
    %h3 Rating
.row
  #sprint-graph-div
  / {:style => "width:100%;height:300px;"}
%br

.row
  .small-12.medium-centered.columns{style: "text-align: center;"}
    %h3 Velocity
.row
  #velocity-graph-div
  / {:style => "width:100%;height:300px;"}

#sprint-graph{"data-points" => @project.sprint_graph.to_json}
#velocity-graph{"data-points" => @project.velocity_graph.to_json}